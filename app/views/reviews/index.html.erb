

<!--nested route -->
<% if @designer %>
<h1>Reviews for <%= @designer.name%> </h1>
<% else %>
<h1>Reviews for All Designers </h1>
<% end %>

<ul>
<% @reviews.each do |r| %>
<%= r.designer.try(:name) %>
<li> <%= link_to r.title, review_path(r)%> - <%= r.stars%></li> <br>
<% end %>
</ul>


<%= link_to "Back", designers_path %><br><br><br>
